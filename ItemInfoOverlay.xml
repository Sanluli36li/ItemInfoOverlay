<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <Script file="ItemInfoOverlay.lua"/>

    <Font name="SanluliItemInfoFont" virtual="true" height="12" outline="NORMAL">
        <Shadow>
            <Offset>
                <AbsDimension x="1" y="-1"/>
            </Offset>
            <Color r=".4" g=".4" b=".4" a=".75"/>
        </Shadow>
    </Font>

    <Frame name="SanluliItemInfoOverlayTemplate" mixin="SanluliItemInfoOverlayMixin" virtual="true">
        <Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="ItemLevel" font="SanluliItemInfoFont" wordwrap="false" nonspacewrap="false">
					<Anchors>
						<Anchor point="TOP" relativePoint="TOP" x="0" y="-2"/>
					</Anchors>
				</FontString>
                <FontString parentKey="BondingType" font="SanluliItemInfoFont" wordwrap="false" nonspacewrap="false">
					<Anchors>
						<Anchor point="TOP" relativeKey="$parent.ItemLevel" relativePoint="BOTTOM" x="0" y="-1"/>
					</Anchors>
				</FontString>
                <FontString parentKey="ItemType" font="SanluliItemInfoFont" wordwrap="false" nonspacewrap="false">
					<Size x="60"/>
					<Anchors>
						<Anchor point="BOTTOM" x="0" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
    </Frame>

	<Frame name="SanluliItemInfoOverlaySettingPriviewTemplate" mixin="SanluliItemInfoOverlaySettingPriviewMixin" virtual="true">
		<Size y="0"/>
		<Frames>
			<ItemButton parentKey="itemButton2">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-30" y="10"/>
				</Anchors>
			</ItemButton>
		</Frames>
		<Frames>
			<ItemButton parentKey="itemButton1">
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.itemButton2" relativePoint="LEFT" x="-5" y="0"/>
				</Anchors>
			</ItemButton>
		</Frames>
		<Layers>
			<Layer level="OVERLAY">
				<FontString text="PREVIEW" inherits="GameFontHighlightSmall">
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativeKey="$parent.itemButton1" relativePoint="TOPLEFT" x="0" y="5"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>
</Ui>
